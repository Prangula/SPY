<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="მენიუ"
        app:titleTextColor="@color/white"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/header"
        />


    <TextView
        android:id="@+id/header"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="ჯაშუში"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:drawableRight="@drawable/baseline_videogame_asset_24"
       android:fontFamily="@font/carbon"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear1"

        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"



        >


        <android.widget.Button
            android:id="@+id/btn_players"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/button"
            android:text="მოთამაშეების რაოდენობა"
            android:textSize="15sp"
            android:drawableBottom="@drawable/baseline_people_24"
            android:textColor="@color/white"
            android:fontFamily="@font/carbon"



            />

        <android.widget.Button
            android:id="@+id/btn_spys"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/button"
           android:layout_marginStart="50dp"
            android:text="ჯაშუშების რაოდენობა"
            android:textSize="15sp"
            android:drawableBottom="@drawable/baseline_person_search_24"
            android:textColor="@color/white"
            android:fontFamily="@font/carbon"
            />





</LinearLayout>


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        >




        <android.widget.Button
            android:id="@+id/btn_timer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/button"
            android:text="წამზომის\n დრო"
            android:textSize="15sp"
            android:drawableBottom="@drawable/baseline_timer_24"
            android:textColor="@color/white"
            android:fontFamily="@font/carbon"
            android:paddingBottom="2dp"



            />

        <android.widget.Button
            android:id="@+id/btn_info"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/button"
            android:drawableBottom="@drawable/baseline_info_24"
            android:fontFamily="@font/carbon"
            android:text="თამაშის\n წესები"
            android:textColor="@color/white"
            android:textSize="15sp"

            />


    </LinearLayout>


    <android.widget.Button
        android:id="@+id/btn_start"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="თამაშის დაწყება"
        android:layout_marginTop="75dp"
        android:textColor="@color/white"
        android:fontFamily="@font/carbon"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/baseline_play_circle_filled_24"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />












</androidx.constraintlayout.widget.ConstraintLayout>










